<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/mGrabaGroup"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#232730"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/mGrabaBtnTourist"
            style="@style/TabText"
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="旅行社订单"
            android:textColor="@color/graba_textview_selector" />

        <RadioButton
            android:id="@+id/mGrabaBtnTravel"
            style="@style/TabText"
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="游客订单"
            android:textColor="@color/graba_textview_selector" />

        <RadioButton
            android:id="@+id/mGrabBtnRobbed"
            style="@style/TabText"
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="已抢订单"
            android:textColor="@color/graba_textview_selector" />
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/mGrabaViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


</com.zhy.autolayout.AutoLinearLayout>
