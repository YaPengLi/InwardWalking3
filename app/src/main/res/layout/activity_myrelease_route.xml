<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.silent.fiveghost.guide.adapter.MyReleaseRouteActivity">
   <com.zhy.autolayout.AutoRelativeLayout
       android:background="@color/toolbar_background"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <include
           layout="@layout/toolbar"/>
       <TextView
           android:text="完成"
           android:textColor="#fff"
           android:id="@+id/mFabuOrWanCheng"
           android:layout_marginTop="70px"
           android:layout_marginRight="44px"
           android:layout_alignParentRight="true"
           android:src="@mipmap/xiaoxi2x"
           android:layout_width="wrap_content"
           android:layout_height="40px"  />
   </com.zhy.autolayout.AutoRelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoLinearLayout
            android:background="#eaebed"
            android:layout_width="match_parent"
            android:layout_height="185px">

   <com.zhy.autolayout.AutoLinearLayout
       android:background="#fff"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <com.zhy.autolayout.AutoLinearLayout
           android:background="#eaebed"
           android:gravity="center_vertical"
           android:layout_width="match_parent"
           android:layout_height="185px">
           <android.support.v7.widget.RecyclerView
               android:layout_centerInParent="true"
               android:id="@+id/mRecyclerView"
               android:layout_width="match_parent"
               android:layout_height="124px"
               android:layout_centerVertical="true"
               android:scrollbars="none"
               />
       </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="15px"
                android:layout_marginLeft="35px"
                android:layout_width="match_parent"
                android:layout_height="80px">
                <TextView
                    android:gravity="center_vertical"
                    android:text="路线名称："
                    android:layout_width="wrap_content"
                    android:layout_height="80px" />
                <EditText
                    android:hint="请输入路线名称"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="80px" />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80px">
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_marginLeft="35px"
                    android:layout_width="wrap_content"
                    android:layout_height="80px">
                    <TextView
                        android:gravity="center_vertical"
                        android:text="路线名称："
                        android:layout_width="wrap_content"
                        android:layout_height="80px" />
                    <EditText
                        android:textSize="15sp"
                        android:hint="请输入价格"
                        android:background="#fff"
                        android:layout_width="200px"
                        android:layout_height="80px" />
                </com.zhy.autolayout.AutoLinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_marginLeft="35px"
                    android:layout_width="match_parent"
                    android:layout_height="80px">
                    <TextView
                        android:gravity="center_vertical"
                        android:text="儿童价格："
                        android:layout_width="wrap_content"
                        android:layout_height="80px" />
                    <EditText
                        android:textSize="15sp"
                        android:hint="请输入价格"
                        android:background="#fff"
                        android:layout_width="260px"
                        android:layout_height="80px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginLeft="35px"
                android:layout_width="match_parent"
                android:layout_height="80px">
                <TextView
                    android:id="@+id/flag14"
                    android:gravity="center_vertical"
                    android:text="出行日期："
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="80px" />
                <TextView
                    android:layout_toRightOf="@+id/flag14"
                    android:id="@+id/currentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:textSize="15sp" />
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginBottom="15px"
                android:layout_marginLeft="35px"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="80px">
                <TextView
                    android:gravity="center_vertical"
                    android:text="游玩天数："
                    android:layout_width="wrap_content"
                    android:layout_height="80px" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:background="@color/fengexian"
                android:layout_width="match_parent"
                android:layout_height="10px"/>
            <TextView
                android:layout_marginLeft="33px"
                android:layout_marginTop="35px"
                android:text="路线描述"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="top"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:textSize="15sp"
                android:layout_marginLeft="35px"
                android:background="#fff"
                android:hint="请描述你的路线"
                android:layout_width="match_parent"
                android:layout_height="170px" />
            <include
                layout="@layout/segmentinglineview"/>
            <TextView
                android:layout_marginLeft="33px"
                android:layout_marginTop="35px"
                android:text="报名须知"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="top"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:textSize="15sp"
                android:layout_marginLeft="35px"
                android:background="#fff"
                android:hint="提示信息....."
                android:layout_width="match_parent"
                android:layout_height="170px" />
            <include
                layout="@layout/segmentinglineview"/>

            <TextView
                android:layout_marginLeft="33px"
                android:layout_marginTop="35px"
                android:text="温馨提示"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="top"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:textSize="15sp"
                android:layout_marginLeft="35px"
                android:background="#fff"
                android:hint="提示信息...."
                android:layout_width="match_parent"
                android:layout_height="170px" />
            <include
                layout="@layout/segmentinglineview"/>

            <TextView
                android:layout_marginLeft="33px"
                android:layout_marginTop="35px"
                android:text="注意事项"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="top"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:textSize="15sp"
                android:layout_marginLeft="35px"
                android:background="#fff"
                android:hint="请描述你的路线"
                android:layout_width="match_parent"
                android:layout_height="170px" />
   </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
