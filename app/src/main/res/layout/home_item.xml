<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="30px"
    android:layout_marginRight="30px"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="210px"
        android:id="@+id/home_item_cardview"
        android:layout_height="210px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        >
        <ImageView
            android:id="@+id/home_item_image"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv_cityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="30px"

        android:layout_marginTop="20px"
        android:layout_toEndOf="@+id/home_item_cardview"
        android:layout_toRightOf="@+id/home_item_cardview"
        android:text="城市：丽江" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_cityname"
        android:layout_alignStart="@+id/tv_cityname"
        android:layout_below="@+id/tv_cityname"

        android:text="时间：" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_time"
        android:layout_alignStart="@+id/tv_time"
        android:layout_below="@+id/tv_time"

        android:text="人数：4人" />

    <TextView
        android:id="@+id/tv_love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_number"
        android:layout_alignStart="@+id/tv_number"
        android:layout_below="@+id/tv_number"

        android:text="旅游偏好：自然风景" />

    <TextView
        android:id="@+id/tv_order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_love"
        android:layout_alignStart="@+id/tv_love"
        android:layout_below="@+id/tv_love"
        android:text="订单类型：一站式" />

    <TextView
        android:id="@+id/tv_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/accept"
        android:layout_marginRight="30px"
        android:text="接受"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="#fff"/>

</com.zhy.autolayout.AutoRelativeLayout>
