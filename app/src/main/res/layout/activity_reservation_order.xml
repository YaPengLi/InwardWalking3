<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:background="#34393f">

     <include
         layout="@layout/toolbar"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/order_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:background="#232730"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_order_passenger2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:text="预约我的订单"
            android:textColor="#00cd96" />

        <TextView
            android:id="@+id/tv_order_travel2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#ccc"
            android:text="已同意订单" />

    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/order_linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:background="#232730"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_order_passenger3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:text="预约我的订单"
            android:textSize="18sp"
            android:textColor="#00cd96" />

        <TextView
            android:id="@+id/tv_order_travel3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ccc"
            android:textSize="16sp"
            android:text="已同意订单" />
        <TextView
            android:id="@+id/tv_order_refuse3"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#ccc"
            android:text="已拒绝订单" />

    </com.zhy.autolayout.AutoLinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_order_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30px"
        android:paddingRight="30px" />

</com.zhy.autolayout.AutoLinearLayout>

