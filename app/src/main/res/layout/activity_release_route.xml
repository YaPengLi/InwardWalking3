<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/flag9"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="#34393f"
      >
        >
        <include
            layout="@layout/toolbar"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <LinearLayout
        android:id="@+id/flag10"
        android:layout_above="@id/flag10"
        android:background="#fff"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginBottom="19px"
            android:background="#d1d1d1"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="18px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="105px"
                android:gravity="center"
                android:textColor="#ff8005"
                android:background="@drawable/shape_route_yello"
                android:text="修改"
                android:layout_width="120px"
                android:layout_height="60px" />
            <TextView
                android:gravity="center"
                android:textColor="#ff8005"
                android:background="@drawable/shape_route_yello"
                android:text="删除"
                android:layout_width="120px"
                android:layout_height="60px" />
            <TextView
                android:id="@+id/fabu"
                android:layout_marginLeft="105px"
                android:gravity="center"
                android:textColor="#ff8005"
                android:background="@drawable/shape_route_yello"
                android:text="发布"
                android:layout_width="120px"
                android:layout_height="60px" />
        </LinearLayout>
    </LinearLayout>

   <com.jcodecraeer.xrecyclerview.XRecyclerView
       android:layout_below="@id/flag9"
       android:layout_above="@id/flag10"
       android:id="@+id/mActivity_release_route_recyclerview"
       android:layout_width="match_parent"
       android:layout_height="match_parent"></com.jcodecraeer.xrecyclerview.XRecyclerView>



</com.zhy.autolayout.AutoRelativeLayout>
